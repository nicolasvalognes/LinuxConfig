[module/time]
type = internal/date
interval = 1.0
;time = " %A, %B %dth  -  %H:%M "
;time-alt = " %A, %B %dth  -  %H:%M "

;date = %Y-%m-%d%
time =%d/%m/%Y %H:%M:%S
;date-alt = %A, %d %B %Y
;time-alt = %H:%M:%S

label = %time%
format-background = ${colors.background}
format-foreground = ${colors.foreground}

